.form-group
  = label :role, :name, class: 'control-label col-md-3'
  .col-md-9
    = text_field  :role, :name, class: 'form-control'
.form-group
  = label :role, :notes, class: 'control-label col-md-3'
  .col-md-9
    = text_area :role, :notes, class: 'form-control'
.form-group
  .col-md-9.col-md-offset-3
    = submit_tag('Save', class: 'btn btn-primary')
    - if !@role.nil?
      or
      = link_to 'Delete', universal_ar.role_path(@role), method: :delete, data: {confirm: 'Are you sure you want to delete this role?'}, class: 'btn btn-danger btn-sm'